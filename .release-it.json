{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true
    },
    "git": {
        "requireCleanWorkingDir": false,
        "commitMessage": "release: V${version}",
        "commit": true,
        "commitArgs": ["--no-verify"],
        "tag": true,
        "tagName": "release-${version}",
        "push": true,
        "pushRepo": null,
        "afterReleaseCommand": "npm run post:release"
    }
}
